<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/carNameText"
        android:layout_width="129dp"
        android:layout_height="54dp"
        android:fontFamily="sans-serif-black"
        android:text="Car 1"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="36sp"
        tools:layout_editor_absoluteX="141dp"
        tools:layout_editor_absoluteY="111dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="312dp"
        android:layout_height="156dp"
        app:srcCompat="@android:drawable/ic_menu_gallery"
        tools:layout_editor_absoluteX="49dp"
        tools:layout_editor_absoluteY="201dp" />

    <TextView
        android:id="@+id/carModel"
        android:layout_width="125dp"
        android:layout_height="32dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="Model : "
        android:textColor="@color/white"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="49dp"
        tools:layout_editor_absoluteY="406dp" />

    <TextView
        android:id="@+id/carEngine"
        android:layout_width="125dp"
        android:layout_height="32dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="Engine : "
        android:textColor="@color/white"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="49dp"
        tools:layout_editor_absoluteY="473dp" />

    <TextView
        android:id="@+id/carDescr"
        android:layout_width="125dp"
        android:layout_height="32dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="Description : "
        android:textColor="@color/white"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="49dp"
        tools:layout_editor_absoluteY="544dp" />

    <TextView
        android:id="@+id/carModelText"
        android:layout_width="170dp"
        android:layout_height="32dp"
        android:fontFamily="sans-serif-medium"
        android:text="Car 1 Model"
        android:textColor="@android:color/darker_gray"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="191dp"
        tools:layout_editor_absoluteY="406dp" />

    <TextView
        android:id="@+id/carEngineText"
        android:layout_width="170dp"
        android:layout_height="32dp"
        android:fontFamily="sans-serif-medium"
        android:text="Car 1 Engine"
        android:textColor="@android:color/darker_gray"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="191dp"
        tools:layout_editor_absoluteY="473dp" />

    <TextView
        android:id="@+id/carDescrText"
        android:layout_width="170dp"
        android:layout_height="75dp"
        android:fontFamily="sans-serif-medium"
        android:text="Car 1 Description"
        android:textColor="@android:color/darker_gray"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="191dp"
        tools:layout_editor_absoluteY="544dp" />
</androidx.constraintlayout.widget.ConstraintLayout>